{
    "name": "prajapatinirav/laravel-translatable",
    "description": "A trait to make an Eloquent model hold translations",
    "keywords": [
        "PrajapatiNirav",
        "laravel-translatable",
        "translate",
        "eloquent",
        "model",
        "i8n",
        "multilingual"
    ],
    "homepage": "https://github.com/prajapatinirav/laravel-translatable",
    "license": "MIT",
    "authors": [
        {
            "name": "Nirav Prajapati",
            "email": "nirav.t.prajapati21@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.2",
        "illuminate/database": "~5.8.0|^6.0",
        "illuminate/support": "~5.8.0|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "~3.8.0|^4.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PrajapatiNirav\\Translatable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrajapatiNirav\\Translatable\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "PrajapatiNirav\\Translatable\\TranslatableServiceProvider"
            ]
        }
    }
}
